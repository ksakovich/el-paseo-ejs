<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <% if (isAuthenticated && isAdmin){ %>
            <%- include('../includes/admin-nav.ejs') %>
                <% } else { %>
                    <%- include('../includes/navigation.ejs')
                        %>
                        <% } %>

                            <main>
                                <form class="product-form"
                                    action="/admin/<% if (editing) { %>edit-category<% } else { %>add-category<% } %>"
                                    method="POST">
                                    <input type="hidden"
                                        name="_csrf"
                                        value=<%=csrfToken
                                        %> >
                                    <% if (editing) { %>
                                        <input type="hidden"
                                            value="<%= category.category_id %>"
                                            name="category_id">

                                        <% } %>
                                            <div
                                                class="form-control">
                                                <label
                                                    for="category_name">Category
                                                    name</label>
                                                <input
                                                    type="text"
                                                    name="category_name"
                                                    id="category_name"
                                                    value="<% if (editing) { %><%= category.category_name %><% } %>"
                                                    required>
                                            </div>
                                            <button
                                                class="btn"
                                                type="submit">
                                                <% if
                                                    (editing)
                                                    { %>
                                                    Update
                                                    Category
                                                    <% } else
                                                        { %>
                                                        Add
                                                        Category
                                                        <% }
                                                            %>
                                            </button>
                                </form>
                            </main>
                            <%- include('../includes/end.ejs')
                                %>