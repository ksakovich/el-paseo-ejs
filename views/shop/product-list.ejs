<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>

            <main>
                <section id="posts">

                    <div class="row">
                        <div class="col-md-2">
                            <div
                                class="py-5 border-bottom ml-5">
                                
                                <h3 class="font-weight-bold">Categories</h3>
                                <ul class="list-group">
                                    <li class="list-group-item list-group-item-action d-flex justify-content-between align-items-center category"> Fruits and Vegetables  </li>
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-10 py-5">
                            <% if (prods.length> 0) { %>
                                <div class="grid">
                                    <% for (let product of
                                        prods) { %>
                                        <article
                                            class="card product-item">
                                            <header
                                                class="card__header">
                                                <h1
                                                    class="product__title">
                                                    <%=
                                                        product.title%>
                                                </h1>
                                            </header>

                                            <div
                                                class="card__image">
                                                <img src="<%= product.small_image_url %>"
                                                    alt="<%= product.title %>">
                                            </div>
                                            <div
                                                class="card__content">
                                                <h2
                                                    class="product__price">
                                                    $
                                                    <%= product.price
                                                        %>
                                                </h2>
                                                <p
                                                    class="product__description">
                                                    <%= product.short_description
                                                        %>
                                                </p>
                                            </div>
                                            <div
                                                class="card__actions">
                                                <a href="/products/<%= product.product_id %>"
                                                    class="btn">Details</a>
                                                <%- include('../includes/add-to-cart.ejs',{product:
                                                    product})%>
                                            </div>
                                        </article>
                                        <% } %>
                                </div>
                                <% } else { %>
                                    <h1>No Products Found!
                                    </h1>
                                    <% } %>
                        </div>
                    </div>

                </section>
            </main>
            <%- include('../includes/end.ejs') %>